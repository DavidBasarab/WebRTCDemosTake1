@{
    ViewBag.Title = "Caller";
}

<h2>Room</h2>

<div id="signalrid"></div>
<div>
    <button id="join" disabled>Join</button>
</div>
<div id="videos"></div>

<div class="video-template">
    <div><video autoplay controls /></div>
    <div><span /></div>
</div>

